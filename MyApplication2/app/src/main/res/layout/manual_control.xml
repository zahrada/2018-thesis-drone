<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.myapplication.ManualControl">

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/backButtonMan"/>

    <TextView
        android:id="@+id/manualDataLeft"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/joystickLeft" />

    <TextView
        android:id="@+id/manualDataRight"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/joystickRight" />

    <com.example.myapplication.JoystickView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickLeft"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        custom:JV_buttonColor="#FF6E40"
        custom:JV_buttonSizeRatio="10%"
        custom:JV_borderColor="#00796B"
        custom:JV_backgroundColor="#00000000"
        custom:JV_borderWidth="2dp"
        custom:JV_fixedCenter="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <com.example.myapplication.JoystickView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickRight"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        custom:JV_buttonColor="#FF6E40"
        custom:JV_buttonSizeRatio="10%"
        custom:JV_borderColor="#00796B"
        custom:JV_backgroundColor="#00000000"
        custom:JV_borderWidth="2dp"
        custom:JV_fixedCenter="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>